#!/bin/bash

APP_PATH="/Library/Application\ Support/WLAN"
CP_PATH="/Library/Application\ Support/WLAN/icons/"
RES_PATH="/Library/Application\ Support/WLAN/StatusBarApp.app/Contents/Resources/"

echo
echo "=========================================================================="
echo "Choosing Dark Mode or Light Mode will apply the icon set!"
echo "=========================================================================="
echo "Select your choice :" 
echo "1 = Dark Icons"
echo "2 = Light Icons"
echo "3 = Blue Icons"
echo "Q = Exit"
echo
read -p "Selected : " answer
case ${answer:0:1} in
	1 )
		cp /Library/Application\ Support/WLAN/Icons/blackicns/* /Library/Application\ Support/WLAN/StatusBarApp.app/Contents/Resources/
		killall StatusBarApp
	;;
	2 )
		cp /Library/Application\ Support/WLAN/Icons/whiteicns/* /Library/Application\ Support/WLAN/StatusBarApp.app/Contents/Resources/
		killall StatusBarApp
	;;
	3 )
		cp /Library/Application\ Support/WLAN/Icons/blueicns/* /Library/Application\ Support/WLAN/StatusBarApp.app/Contents/Resources/
		killall StatusBarApp
	;;
	Q )
		exit
	;;
esac
echo "==============================="
echo "Restart StatusBarApp..."
echo "==============================="
sleep 5
open /Library/Application\ Support/WLAN/StatusBarApp.app
#launchctl reboot logout
